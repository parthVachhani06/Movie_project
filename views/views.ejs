<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Document</title>
    <link rel="stylesheet" href="style.css" type="text/css">
</head>

<body class="viewshow">
    <div>
        <header class="p-3 text-danger">
            <div class="row d-flex">
                <div class="col-3 text-center">
            
                </div>
                <div class="col-5"></div>
                <div class="col-3 text-end">
                    <button class="btn btn-danger">
                        <a href="/" class="text-light ">ADD </a>
                    </button>
                </div>
            </div>
        </header>
    
        <div class="text-center">
            <div class="container m-3">
                <div class="row gap-5">
                    <% movies.forEach(function(movie,index){ %>
    
                        <div class="card p-0" style="width: 18rem;">
                            <img src="./<%= movie.movieposter %>" class="card-img-center w-100" alt="image">
                            <div class="card-body">
                              <h5 class="card-title"> <%= movie.movieName %></h5>
                              <p class="card-text"><%= movie.description %></p>
                            </div>
                            <ul class="list-group list-group-flush">
                              <li class="list-group-item text-start">Rate : <%= movie.rate %></li>
                              <li class="list-group-item text-start">type :  <%= movie.type %></li>
                              <li class="list-group-item text-start">Language :<%= movie.language %></li>
                            </ul>
                            <div class="card-body">
                                <button class="btn">
                                    <a href="/deletemovie/<%= movie.id %>" class="text-danger">Delete</a>
                                </button>
                                ||
                                <button class="btn">
                                    <a href='/editmovie/<%= movie.id %>' class="text-primary">Edit</a>
                                </button>
                            </div>
                          </div>
    
                        <% }); %>
                   
                    
                </div>
            </div>
            
    
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>